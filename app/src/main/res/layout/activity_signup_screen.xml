<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".activity.SignupScreenActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp">

                <ImageView
                    android:id="@+id/ivBackSignUp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:src="@drawable/ic_vector__40_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/mulish_extrabold"
                    android:text="Create Your Account"
                    android:textColor="@color/black_b"
                    android:textFontWeight="800"
                    android:textSize="18dp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line1"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:textSize="12dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:textColor="@color/black_a"
                android:fontFamily="@font/mulish_semibold"
                android:textFontWeight="600"
                android:text="Please enter your personal details, worry not, they are  safe with us"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_19sdp">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    android:backgroundTint="@color/gray_a"
                    android:fontFamily="@font/mulish_regular"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:textFontWeight="400"
                    android:textColorHint="@color/black_a"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    android:backgroundTint="@color/gray_a"
                    android:fontFamily="@font/mulish_regular"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="@string/email_address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textFontWeight="400"
                    android:textColorHint="@color/black_a"
                    android:textSize="16dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/_22sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/gray_a"
                            android:fontFamily="@font/mulish_regular"
                            android:hint="@string/password"
                            android:inputType="textEmailAddress"
                            android:background="@null"
                            android:textFontWeight="400"
                            android:layout_weight="1"
                            android:maxLength="6"
                            android:imeOptions="actionNext"
                            android:paddingBottom="@dimen/_12sdp"
                            android:textColorHint="@color/black_a"
                            android:textSize="16dp"
                            />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivShowHidePass1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center" />

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_a"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/_22sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/etConPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/gray_a"
                            android:fontFamily="@font/mulish_regular"
                            android:hint="Confirm Password"
                            android:inputType="textEmailAddress"
                            android:background="@null"
                            android:textFontWeight="400"
                            android:layout_weight="1"
                            android:maxLength="6"
                            android:imeOptions="actionNext"
                            android:paddingBottom="@dimen/_12sdp"
                            android:textColorHint="@color/black_a"
                            android:textSize="16dp"
                            />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivShowHidePass2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center" />

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_a"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>



            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="230dp"
                android:layout_height="54dp"
                android:background="@drawable/btn_backg"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:textColor="@color/black_c"
                android:text="SignUp"
                android:textAllCaps="false"
                android:fontFamily="@font/raleway_bold"
                android:textFontWeight="700"
                android:layout_marginHorizontal="@dimen/_12sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_16sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an Account ?"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_gravity="end"
                    android:textColor="@color/gray_b"
                    android:fontFamily="@font/mulish_light"
                    android:textFontWeight="300"/>

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulish_bold"
                    android:textFontWeight="700"/>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>




</ScrollView>