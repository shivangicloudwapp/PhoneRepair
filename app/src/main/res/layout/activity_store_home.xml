<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".storeactivity.StoreHomeActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_80sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_128sdp"
                android:background="@color/green"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_33sdp"
                    android:fontFamily="@font/mulish_extrabold"
                    android:text="Benjamin"
                    android:textColor="@color/black_b"
                    android:textFontWeight="800"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/tvPhoneEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:fontFamily="@font/mulish_light"
                    android:text="+61 42226335897  Benjamin@gmail.com"
                    android:textColor="@color/black_b"
                    android:textFontWeight="300"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_90sdp"
                android:background="@drawable/group1019"
                android:layout_marginHorizontal="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_30sdp"
                        android:textColor="@color/black_b"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:fontFamily="@font/mulish_extrabold"
                        android:textFontWeight="500"
                        android:text="Silver "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/black_b"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:fontFamily="@font/mulish_light"
                        android:textFontWeight="300"
                        android:text="3 Months"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black_b"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Post 3 Items"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black_b"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="Expire Date : 31-09-2022"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:src="@drawable/ic_group_1015"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM33.00"
                        android:fontFamily="@font/mulish_bold"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black_b"
                        android:textFontWeight="700"/>



                </LinearLayout>



            </RelativeLayout>




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llStoreProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_vector__52_"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>

            <LinearLayout
                android:id="@+id/llProductMgmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_vector__54_"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product management"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>

            <LinearLayout
                android:id="@+id/llServiceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_group_871"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Orders"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>

            <LinearLayout
                android:id="@+id/llProOder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_vector__55_"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Orders"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>

            <LinearLayout
                android:id="@+id/llWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_group_872"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>

            <LinearLayout
                android:id="@+id/llSwitchToUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_group_882"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Switch to User"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>
            <LinearLayout
                android:id="@+id/llStoreLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_vector__57_"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="@dimen/_15sdp"
                    android:textFontWeight="500"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/doted_line"
                android:layout_marginTop="@dimen/_12sdp"/>



        </LinearLayout>

    </LinearLayout>

</ScrollView>



</LinearLayout>