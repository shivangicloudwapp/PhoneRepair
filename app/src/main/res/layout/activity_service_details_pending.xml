<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.serviceActivity.ServiceDetailsPendingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivBackServPending"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vector__40_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_extrabold"
            android:text="Service Details"
            android:textColor="@color/black_b"
            android:textFontWeight="800"
            android:textSize="18sp" />



    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:background="@drawable/linear_top_radius"
                android:paddingBottom="@dimen/_20sdp"
                android:elevation="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_9sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mulish_semibold"
                                    android:text="Services No -"
                                    android:textColor="@color/black_b"
                                    android:textFontWeight="600"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mulish_light"
                                    android:text=" #CUEP8383832"
                                    android:textColor="@color/black_b"
                                    android:textFontWeight="600"
                                    android:textSize="13sp" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/mulish_semibold"
                                android:text="Pending"
                                android:textColor="@color/txt_orange"
                                android:textFontWeight="600"
                                android:textSize="12sp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:src="@drawable/ic_ellipse_45"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:textColor="@color/txt_clr"
                                    android:text="Screen  Replacment"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:src="@drawable/ic_ellipse_45"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:textColor="@color/txt_clr"
                                    android:text="Battery"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:src="@drawable/ic_ellipse_45"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:textColor="@color/txt_clr"
                                    android:text="Aux Socket"/>


                            </LinearLayout>




                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:background="@drawable/doted_line"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_9sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/mulish_semibold"
                            android:textFontWeight="600"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:textColor="@color/txt_clr"
                            android:text="Description"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:fontFamily="@font/mulish_light"
                            android:textFontWeight="200"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/item_unsclr"
                            android:text="Tprimary allocation: is indicated by writing in capital letters
secondary allocation: is indicated by small letters (see example below)
exclusive or shared utilization: is within the responsibility of administrations"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_6sdp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_9sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:fontFamily="@font/mulish_semibold"
                                android:textFontWeight="600"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/txt_clr"
                                android:text="Images"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/pic1"/>

                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:src="@drawable/pic2"
                                    android:layout_marginStart="@dimen/_11sdp"/>



                            </LinearLayout>

                        </LinearLayout>






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:background="@drawable/doted_line"/>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_11sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish_semibold"
                                android:text="Price Summary"
                                android:textSize="15sp"
                                android:textColor="@color/txt_clr"
                                android:textFontWeight="600"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_10sdp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mulish_light"
                                    android:text="Total Amount"
                                    android:textColor="@color/txt_clr"
                                    android:textFontWeight="300"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/mulish_bold"
                                    android:text="RM40.00"
                                    android:textColor="@color/txt_clr"
                                    android:textFontWeight="700"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                        </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@drawable/doted_line"
                                android:layout_marginTop="@dimen/_14sdp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="@dimen/_9sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/mulish_semibold"
                                    android:textFontWeight="600"
                                    android:textColor="@color/txt_clr"
                                    android:text="Address"
                                    android:layout_marginTop="@dimen/_19sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_13sdp">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_group_866"
                                        android:layout_marginTop="@dimen/_8sdp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:layout_marginStart="@dimen/_11sdp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/mulish_regular"
                                            android:textFontWeight="400"
                                            android:textColor="@color/black_b"
                                            android:text="Other"/>



                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:fontFamily="@font/mulish_light"
                                            android:textFontWeight="300"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:textColor="@color/item_unsclr"
                                            android:text="New Door No. A4-72 Ground Floor c21 Mall,\nLosngeles, California"/>




                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_19sdp"
                                    android:background="@drawable/doted_line"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_29sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_16sdp">
                                    <Button
                                        android:id="@+id/btnAccept"
                                        android:layout_width="95dp"
                                        android:layout_height="34dp"
                                        android:background="@drawable/accept_btn_bac"
                                        android:text="Accept"
                                        android:textSize="13sp"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textAlignment="center"
                                        android:fontFamily="@font/raleway_bold"
                                        android:layout_weight="700"
                                        android:layout_marginBottom="@dimen/_4sdp"/>

                                    <Button
                                        android:id="@+id/btnReject"
                                        android:layout_width="95dp"
                                        android:layout_height="34dp"
                                        android:background="@drawable/reject_btn_bac"
                                        android:text="Reject"
                                        android:textSize="13sp"
                                        android:textAllCaps="false"
                                        android:layout_marginLeft="@dimen/_26sdp"
                                        android:textColor="@color/white"
                                        android:textAlignment="center"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:fontFamily="@font/raleway_bold"
                                        android:layout_weight="700" />
                                </LinearLayout>


                            </LinearLayout>






                        </LinearLayout>






























            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>