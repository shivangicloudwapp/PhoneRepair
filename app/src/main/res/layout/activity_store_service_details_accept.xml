                                            android:layout_width="@dimen/_36sdp"
                                            android:layout_height="@dimen/_36sdp"
                                            android:src="@drawable/profile"
                                            android:layout_gravity="center_vertical"/>

                                        <TextView
                                            android:id="@+id/tvName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Jhon Deo"
                                            android:textSize="15dp"
                                            android:textColor="#646E77"
                                            android:layout_marginStart="@dimen/_8sdp"
                                            android:textFontWeight="300"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/mulish_regular"
                                            />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true">
                                        <ImageView
                                            android:layout_width="@dimen/_24sdp"
                                            android:layout_height="@dimen/_24sdp"
                                            android:background="@drawable/white_circle_bac"
                                            android:backgroundTint="@color/green"
                                            android:padding="@dimen/_8sdp"
                                            android:src="@drawable/ic_vector__62_"/>

                                        <ImageView
                                            android:layout_width="@dimen/_24sdp"
                                            android:layout_height="@dimen/_24sdp"
                                            android:background="@drawable/white_circle_bac"
                                            android:backgroundTint="@color/green"
                                            android:padding="@dimen/_8sdp"
                                            android:layout_marginHorizontal="@dimen/_7sdp"
                                            android:src="@drawable/ic_vector__63_"/>
                                    </LinearLayout>



                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:background="@drawable/doted_line"/>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_16sdp"
                                    android:layout_marginTop="@dimen/_15sdp">


                                    <Button
                                        android:id="@+id/btnAdditionalSetting"
                                        android:layout_width="@dimen/_180sdp"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:textFontWeight="700"
                                        android:fontFamily="@font/raleway_bold"
                                        android:text="Additional Amount"
                                        android:textColor="#181818"
                                        android:background="@drawable/btn_backg"
                                        android:textAllCaps="false"/>

                                    <Button
                                        android:id="@+id/btnServicedone"
                                        android:layout_width="@dimen/_180sdp"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:textFontWeight="700"
                                        android:fontFamily="@font/raleway_bold"
                                        android:text="Service Done"
                                        android:textColor="#181818"
                                        android:layout_marginTop="@dimen/_16sdp"
                                        android:background="@drawable/btn_backg"
                                        android:textAllCaps="false"/>



                                </LinearLayout>



                            </LinearLayout>






                        </LinearLayout>
























                    </LinearLayout>





                </LinearLayout>

