<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.VerifyOtpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/ivBackVerifyotp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_vector__40_" />



            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line1"
                android:layout_marginVertical="@dimen/_8sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_39sdp"
                        android:fontFamily="@font/mulish_extrabold"
                        android:text="Enter Code"
                        android:textColor="@color/black_b"
                        android:textFontWeight="600"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Enter Code"
                        android:textColor="@color/black_a"
                        android:textFontWeight="400"
                        android:textSize="14dp" />



                    <in.aabhasjindal.otptextview.OtpTextView
                        android:id="@+id/otp_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        app:height="40dp"
                        app:width="60dp"
                        app:bar_enabled="true"
                        app:bar_height="2dp"
                        app:length="4"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        app:bar_active_color="@color/black_a"
                        app:bar_inactive_color="@color/otp_dash"
                        app:otp_text_size="@dimen/_20sdp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_14sdp"
                            android:text="@string/resend_otp_00_28"
                            android:textColor="@color/black_a"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_16sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:text="@string/enter_the_four_digit_code_we_sent_to_you_62_23723782738"
                            android:textFontWeight="600"
                            android:textSize="16dp" />


                    </LinearLayout>


                    <Button
                        android:id="@+id/btnVerifyOtp"
                        android:layout_width="230dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="62dp"
                        android:layout_marginBottom="@dimen/_28sdp"
                        android:background="@drawable/btn_backg"
                        android:fontFamily="@font/raleway_bold"
                        android:text="Verify OTP"
                        android:textAllCaps="false"
                        android:textColor="@color/black_c"
                        android:textFontWeight="700"
                        android:textSize="15dp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>




</LinearLayout>