<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".storeactivity.StoreWalletActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_128sdp"
                    android:background="@color/green"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_33sdp"
                        android:fontFamily="@font/mulish_extrabold"
                        android:text="Wallet"
                        android:textColor="@color/black_b"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_18sdp" />


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_group__23_"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_20sdp"
                                android:textColor="@color/black_b"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/mulish_bold"
                                android:textFontWeight="700"
                                android:text="$780"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black_b"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/mulish_regular"
                                android:textFontWeight="400"
                                android:text="Wallet Balance"/>
                        </LinearLayout>

                    </RelativeLayout>



                </androidx.cardview.widget.CardView>




            </RelativeLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabIndicatorHeight="@dimen/_2sdp"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            app:tabIndicatorColor="@color/black_b" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@drawable/line1"
            android:layout_marginHorizontal="@dimen/_14sdp"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpWallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        </LinearLayout>






</LinearLayout>