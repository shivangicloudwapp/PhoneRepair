<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAllStores"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/ivStoreimg"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginStart="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/store1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="The Apple Store"
                    android:textColor="@color/black_b"
                    android:textFontWeight="600"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Door No. A4-72 Ground Floor\nc21 Mall"
                    android:textSize="12sp"
                    android:textColor="@color/item_unsclr"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textFontWeight="300"
                    android:fontFamily="@font/mulish_light"
                    />

                <Button
                    android:id="@+id/btnSeedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:background="@drawable/btn2_radius_backg"
                    android:text="See Details"
                    android:textFontWeight="500"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/_11sdp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:textSize="8sp"
                    android:textColor="@color/black_b"
                    android:fontFamily="@font/mulish_semibold"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
