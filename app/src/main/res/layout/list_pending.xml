<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llPending"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_74sdp"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation=".5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivorder"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_6sdp"
                android:src="@drawable/group868" />

            <LinearLayout
                android:layout_toRightOf="@+id/ivorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#CUEP8383832"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/txt_clr2"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/mulish_semibold" />

                <TextView
                    android:id="@+id/tvTimeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18-02-2021  12:24PM"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/txt_clr3"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/mulish_regular"
                    />

            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:fontFamily="@font/mulish_semibold"
                android:text="Pending"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/pendingclr"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>