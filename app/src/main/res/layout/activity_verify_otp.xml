<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.VerifyOtpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/ivBackVerifyotp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_vector__40_" />



            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line1"
                android:layout_marginVertical="@dimen/_8sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:fontFamily="@font/mulish_extrabold"
                        android:text="Enter Code"
                        android:textColor="@color/black_b"
                        android:layout_marginTop="@dimen/_39sdp"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_30sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Enter Code"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textColor="@color/black_a"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_14sdp" />


                    <com.mukesh.OtpView
                        android:id="@+id/otp_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/black"
                        app:OtpItemCount="4"
                        app:OtpItemWidth="80dp"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_26sdp"
                        app:OtpLineWidth="@dimen/_2sdp"
                        android:layout_gravity="center_horizontal"
                        app:OtpItemSpacing="@dimen/_14sdp"
                        app:OtpLineColor="@color/otp_dash"
                        app:OtpViewType="line" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resend_otp_00_28"
                            android:textColor="@color/black_a"
                            android:textFontWeight="600"
                            android:layout_marginHorizontal="@dimen/_14sdp"
                            android:textSize="@dimen/_16sdp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:text="@string/enter_the_four_digit_code_we_sent_to_you_62_23723782738"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_16sdp" />


                    </LinearLayout>








                    <Button
                        android:id="@+id/btnSendOtp"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_backg"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black_c"
                        android:text="Verify OTP"
                        android:textAllCaps="false"
                        android:fontFamily="@font/raleway_bold"
                        android:textFontWeight="700"
                        android:layout_marginTop="@dimen/_62sdp"
                        android:layout_marginBottom="@dimen/_28sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"/>



                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </ScrollView>




</LinearLayout>