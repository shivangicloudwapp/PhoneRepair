<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".storesservicedetails.StoreServiceDetailsPendingActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivBackServRej"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vector__40_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_extrabold"
            android:text="Service Details"
            android:textColor="@color/black_b"
            android:textFontWeight="800"
            android:textSize="@dimen/_18sdp" />



    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_23sdp"
                android:background="@drawable/linear_top_radius"
                android:paddingBottom="@dimen/_20sdp"
                android:elevation="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_9sdp" >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_15sdp"
                                    android:fontFamily="@font/mulish_semibold"
                                    android:textFontWeight="600"
                                    android:textColor="@color/black_b"
                                    android:text="Services -"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_13sdp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="600"
                                    android:textColor="@color/black_b"
                                    android:text="#CUEP8383832"/>


                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/mulish_semibold"
                                android:textFontWeight="600"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/pendingclr"
                                android:text="Pending"/>


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_6sdp"
                                    android:layout_height="@dimen/_6sdp"
                                    android:src="@drawable/ic_ellipse_45"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_15sdp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:textColor="@color/txt_clr"
                                    android:text="Screen  Replacment"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_6sdp"
                                    android:layout_height="@dimen/_6sdp"
                                    android:src="@drawable/ic_ellipse_45"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_15sdp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:textColor="@color/txt_clr"
                                    android:text="Battery"
                                    android:layout_gravity="center_vertical"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_6sdp"
                                    android:layout_height="@dimen/_6sdp"
                                    android:src="@drawable/ic_ellipse_45"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_15sdp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:textColor="@color/txt_clr"
                                    android:text="Aux Socket"/>


                            </LinearLayout>




                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:background="@drawable/doted_line"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_9sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/mulish_semibold"
                            android:textFontWeight="600"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:textColor="@color/txt_clr"
                            android:text="Description"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/mulish_light"
                            android:textFontWeight="200"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/item_unsclr"
                            android:text="primary allocation: is indicated by writing in capital letters
secondary allocation: is indicated by small letters (see example below)
exclusive or shared utilization: is within the responsibility of administrations"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_6sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_9sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_15sdp"
                                android:fontFamily="@font/mulish_semibold"
                                android:textFontWeight="600"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/txt_clr"
                                android:text="Images"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:src="@drawable/pic1"/>

                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:src="@drawable/pic2"
                                    android:layout_marginStart="@dimen/_11sdp"/>



                            </LinearLayout>
                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:background="@drawable/doted_line"/>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_11sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish_semibold"
                                android:text="Enter Service Amount"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/txt_clr"
                                android:textFontWeight="600"/>

                            <EditText
                                android:id="@+id/etAmount"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_36sdp"
                                android:fontFamily="@font/mulish_light"
                                android:textFontWeight="300"
                                android:textSize="@dimen/_15sdp"
                                android:textColorHint="@color/textclr"
                                android:padding="@dimen/_8sdp"
                                android:inputType="text"
                                android:singleLine="true"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:background="@drawable/edittxt_bac"/>
                            <Button
                                android:id="@+id/btnSubAccept"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_backg"
                                android:text="Submit &amp; Accept"
                                android:textSize="15dp"
                                android:textAllCaps="false"
                                android:textColor="#181818"
                                android:paddingHorizontal="@dimen/_26sdp"
                                android:layout_marginTop="@dimen/_14sdp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:fontFamily="@font/raleway_medium"
                                android:layout_weight="700" />



                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:background="@drawable/doted_line"
                            android:layout_marginTop="@dimen/_14sdp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_9sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_15sdp"
                                android:fontFamily="@font/mulish_semibold"
                                android:textFontWeight="600"
                                android:textColor="@color/txt_clr"
                                android:text="Address"
                                android:layout_marginTop="@dimen/_19sdp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_13sdp">

                                <ImageView
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    android:src="@drawable/ic_group_866"
                                    android:layout_marginTop="@dimen/_8sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginStart="@dimen/_11sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_16sdp"
                                        android:fontFamily="@font/mulish_regular"
                                        android:textFontWeight="400"
                                        android:textColor="@color/black_b"
                                        android:text="Other"/>



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:fontFamily="@font/mulish_light"
                                        android:textFontWeight="300"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:textColor="@color/item_unsclr"
                                        android:text="New Door No. A4-72 Ground Floor c21 Mall,\nLosngeles, California"/>




                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_19sdp"
                            android:background="@drawable/doted_line"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_6sdp">
                            <ImageView
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:src="@drawable/profile"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jhon Deo"
                                android:textSize="15dp"
                                android:textColor="#646E77"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textFontWeight="300"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/mulish_regular"
                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:background="@drawable/doted_line"/>

                        <Button
                            android:id="@+id/btnReject"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/btn_backg"
                            android:text="Reject"
                            android:textSize="15dp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:paddingHorizontal="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:textAlignment="center"
                            android:backgroundTint="@color/red"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_medium"
                            android:layout_weight="500" />


                    </LinearLayout>






                </LinearLayout>






























            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>