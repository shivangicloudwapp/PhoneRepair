<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneRepair" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


        <style name="card_custom_corners" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopRight">34dp</item>
            <item name="cornerSizeTopLeft">34dp</item>

        </style>




    <style name="Theme.PhoneRepair.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PhoneRepair.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PhoneRepair.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
            <item name="android:textColor">@color/gray_a</item>
        <item name="android:width">1dp</item>

    </style>


    <style name="Custom_textinputlayout_filledbox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        ....
        <item name="boxStrokeColor">@color/gray_a</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/gray_a</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#E3FF80</item>
    </style>



    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_b</item>
        <item name="colorControlActivated">@color/ratingColor</item>
    </style>

</resources>