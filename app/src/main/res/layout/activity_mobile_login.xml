<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".activity.MobileLoginActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/ivBackSignUp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_vector__40_" />



            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line1"
                android:layout_marginVertical="14dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="29dp"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/mulish_extrabold"
                        android:text="Enter Phone
                          Number"
                        android:textColor="@color/black_b"
                        android:textFontWeight="600"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_12sdp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Phone Number"
                        android:textColor="@color/black_a"
                        android:textFontWeight="400"
                        android:textSize="14sp" />



                    <EditText
                        android:id="@+id/etPhoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="8dp"
                        android:backgroundTint="@color/gray_a"
                        android:fontFamily="@font/mulish_regular"
                        android:hint="+62 5254346545"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="11dp"
                        android:textColorHint="@color/black_a"
                        android:textFontWeight="400"
                        android:textSize="14sp" />



                    <Button
                        android:id="@+id/btnSendOtp"
                        android:layout_width="230dp"
                        android:layout_height="54dp"
                        android:background="@drawable/btn_backg"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15sp"
                        android:textColor="@color/black_c"
                        android:text="Send OTP"
                        android:textAllCaps="false"
                        android:fontFamily="@font/raleway_bold"
                        android:textFontWeight="700"
                        android:layout_marginVertical="@dimen/_16sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"/>



                </LinearLayout>




            </LinearLayout>


        </LinearLayout>



</ScrollView>