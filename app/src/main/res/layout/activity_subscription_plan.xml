<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SubscriptionPlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28sp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivBackSubPlan"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vector__40_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_extrabold"
            android:text="Subscription  Plan"
            android:textColor="@color/black_b"
            android:textFontWeight="800"
            android:textSize="18sp" />
    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
    android:layout_marginHorizontal="@dimen/_15sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_semibold"
            android:text="Select your Plan"
            android:textColor="@color/black_b"
            android:elevation="0.9dp"
            android:textFontWeight="600"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSubPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Buy Membership"
            android:textAllCaps="false"
            android:fontFamily="@font/raleway_bold"
            android:layout_weight="700"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:layout_marginHorizontal="@dimen/_56sdp"
            android:background="@drawable/btn_backg"/>






    </LinearLayout>

</LinearLayout>