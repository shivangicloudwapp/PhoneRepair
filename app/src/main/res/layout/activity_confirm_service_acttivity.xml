<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ConfirmServiceActtivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivBackConSer"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vector__40_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_extrabold"
            android:text="Confirm Service"
            android:textColor="@color/black_b"
            android:textFontWeight="800"
            android:textSize="@dimen/_18sdp" />






    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_23sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/_26sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/mulish_semibold"
                    android:textFontWeight="600"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black_b"
                    android:text="Services"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:src="@drawable/ic_ellipse_45"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/mulish_light"
                            android:textFontWeight="300"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:textColor="@color/txt_clr"
                            android:text="Screen  Replacment"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:src="@drawable/ic_ellipse_45"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/mulish_light"
                            android:textFontWeight="300"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:textColor="@color/txt_clr"
                            android:text="Battery"
                            android:layout_gravity="center_vertical"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:src="@drawable/ic_ellipse_45"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/mulish_light"
                            android:textFontWeight="300"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:textColor="@color/txt_clr"
                            android:text="Aux Socket"/>


                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/mulish_semibold"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black_b"
                        android:text="Details"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/mulish_light"
                        android:textFontWeight="200"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/item_unsclr"
                        android:text="The Mobile Store currently is covering and has more than 700+ outlets in different major cities"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/mulish_semibold"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black_b"
                        android:text="Picture"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_6sdp">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/pic1"/>

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/pic2"
                            android:layout_marginStart="@dimen/_11sdp"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_19sdp"
                        android:background="@drawable/doted_line"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:fontFamily="@font/mulish_semibold"
                                android:textFontWeight="600"
                                android:textColor="@color/txt_clr"
                                android:textSize="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_19sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/_26sdp"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:fontFamily="@font/mulish_bold"
                                android:text="Change"
                                android:textColor="@color/red"
                                android:textFontWeight="700"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_group_866"
                                android:layout_marginTop="@dimen/_8sdp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_11sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_16sdp"
                                    android:fontFamily="@font/mulish_regular"
                                    android:textFontWeight="400"
                                    android:textColor="@color/black_b"
                                    android:text="Other"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/mulish_light"
                                    android:textFontWeight="300"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textColor="@color/item_unsclr"
                                    android:text="The Mobile Store currently is covering and has more than 700+ outlets in different major cities"/>



                            </LinearLayout>


                        </LinearLayout>





                    </LinearLayout>






                </LinearLayout>








                <Button
                    android:id="@+id/btnBookService"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_54sdp"
                    android:background="@drawable/btn_backg"
                    android:text="Book Service"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black_c"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textFontWeight="700"
                    android:layout_marginTop="@dimen/_46sdp"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginBottom="@dimen/_40sdp"

                    />












            </LinearLayout>





        </androidx.cardview.widget.CardView>

    </ScrollView>




</LinearLayout>