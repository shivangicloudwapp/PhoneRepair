<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_168sdp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="9dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivStoreimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_93sdp"
                android:scaleType="centerCrop"
                android:background="@drawable/img_2" />

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Apple Store"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/mulish_semibold" />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Door No. A4-72 Ground Floor\nc21 Mall"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/item_unsclr"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textFontWeight="300"
                android:fontFamily="@font/mulish_light"
                />

            <Button
                android:id="@+id/tvSeedetail"
                android:layout_width="@dimen/_71sdp"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/btn2_radius_backg"
                android:text="See Details"
                android:textFontWeight="500"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/mulish_semibold"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>