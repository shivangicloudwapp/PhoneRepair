<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Service No - #CUEP8383832"
                            android:textColor="@color/txt_clr2"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/mulish_regular"
                            android:text="18-02-2021"
                            android:textColor="@color/dark2"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/btnReject"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:background="@drawable/pending_btn"
                        android:backgroundTint="#972727"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Rejected"
                        android:textAllCaps="false"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/doted_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_6sdp">
                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jhon Deo"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#646E77"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textFontWeight="300"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mulish_regular"
                    />


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>