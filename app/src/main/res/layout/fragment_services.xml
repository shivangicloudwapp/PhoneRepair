<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.ServicesFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textColor="@color/black_b"
        android:textSize="18sp"
        android:fontFamily="@font/mulish_extrabold"
        android:textFontWeight="800"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/black_b"
        app:tabIndicatorHeight="@dimen/_2sdp"
        app:tabMode="fixed"
        app:tabTextColor="@color/black_b"
        android:textAlignment="center"
        app:tabTextAppearance="@style/MyCustomTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@drawable/line1"
        android:layout_marginHorizontal="@dimen/_14sdp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpService"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>