<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SubscribeNewStoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivBackSubNewstore"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vector__40_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_extrabold"
            android:text="Subscribe New Store"
            android:textColor="@color/black_b"
            android:textFontWeight="800"
            android:textSize="18sp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line1"
        android:layout_marginTop="@dimen/_10sdp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_23sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulish_semibold"
                android:text="Store Name"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etStoreName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/edittxt_bac"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_light"
                android:hint="Store Name"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="@color/black_b"
                android:textColorHint="@color/black_b"
                android:textFontWeight="300"
                android:textSize="12sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulish_semibold"
                android:text="Registration No"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etRegistrationNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Registration Number"
                android:fontFamily="@font/poppins_light"
                android:textFontWeight="300"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black_b"
                android:layout_marginTop="@dimen/_15sdp"
                android:imeOptions="actionNext"
                android:textColorHint="@color/black_b"
                android:includeFontPadding="false"
                android:background="@drawable/edittxt_bac"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulish_semibold"
                android:text="Address"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Address"
                android:fontFamily="@font/poppins_light"
                android:textFontWeight="300"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:imeOptions="actionNext"
                android:textColorHint="@color/black_b"
                android:textColor="@color/black_b"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/edittxt_bac"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulish_semibold"
                android:text="About Store"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etAboutStore"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:hint="About Store"
                android:fontFamily="@font/mulish_light"
                android:textFontWeight="300"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColor="@color/black_b"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="start"
                android:paddingTop="8dp"
                android:ellipsize="end"
                android:imeOptions="actionDone"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColorHint="@color/black_b"
                android:background="@drawable/edittxt_bac"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulish_semibold"
                android:text="Store Image"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/llStoreImg"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginTop="@dimen/_11sdp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/line_bac">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/vector13" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/vector14"
                        android:layout_marginHorizontal="@dimen/_12sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/vector13"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="Upload Image"
                    android:textColor="@color/txt_clr4"
                    android:textFontWeight="600"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="15sp" />







            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvImageStore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_weight="1"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mulish_semibold"
                android:text="Upload SSM Image"
                android:textColor="@color/black_b"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_14sdp"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/llSsmImg"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginTop="@dimen/_11sdp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/line_bac">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/vector13" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/vector14"
                        android:layout_marginHorizontal="@dimen/_12sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/vector13"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="Upload Image"
                    android:textColor="@color/txt_clr4"
                    android:textFontWeight="600"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="15sp" />







            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSsmImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:numColumns="3"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_weight="1"
                android:scrollbars="none"/>

            <!--

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="53dp"
                                android:layout_height="53dp"
                                android:layout_marginTop="@dimen/_9sdp">

                                <ImageView
                                    android:id="@+id/ivSsmImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img5" />

                            </RelativeLayout>


                            <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_marginLeft="36dp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/white_circle_bac"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_vector__65_" />
                        </RelativeLayout>


            -->



            <Button
                android:id="@+id/btnSave"
                android:layout_width="230dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:text="Save"
                android:textAllCaps="false"
                android:fontFamily="@font/raleway_bold"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/btn_backg"
                android:layout_marginBottom="@dimen/_36sdp"
                android:textColor="@color/black_c"/>


        </LinearLayout>


        


    </ScrollView>

</LinearLayout>